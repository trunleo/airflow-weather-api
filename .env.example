# Weather Airflow Project Environment Variables

# Database Configuration
WEATHER_POSTGRES_CONN=postgresql://username:password@localhost:5432/weather_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=weather_db
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://airflow:CHANGE_ME_PASSWORD@localhost:5432/airflow
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here

# Weather API Configuration
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_BASE_URL=https://api.weather.com/v1

# Webhook Configuration
WEATHER_WEBHOOK_URL=http://localhost:8080/webhook/weather
WEATHER_WEBHOOK_API_KEY=your-webhook-api-key
WEATHER_WEBHOOK_SECRET=your-webhook-secret

# Alert Configuration
WEATHER_DATA_RETENTION_DAYS=90
WEATHER_ALERT_EMAIL=admin@example.com
WEATHER_FORECAST_DAYS=7

# Development Settings
DEBUG=true
LOG_LEVEL=INFO